form(action=(resource ? `//update` : "/routes"), method="POST")
  if resource
    input(type="hidden", name="id", value=resource.id)

  .form-group
    label Title
    input.form-control(name="Game[title]", required, value=(ArcadeGames ? ArcadeGame.title : null))

  .form-group
    label Content
    textarea.form-control(name="arcade[content]")
      = ArcadeGames ? ArcadeGame.content : null
  
  .form-group
    button.btn.btn-dark(type="submit") Submit